extends ../template/usercommon.pug

block main
    div.d-flex.flex-column.text-center
        h1 CREATE USERS

        div.text-left.text-danger
            if errors
                ul
                    each error in errors
                        li= error

        form.form-horizontal.d-flex.flex-column(action='/users/create', method='post')
            .form-group
                label(for="name") Name:
                input#name.form-control.w-50.m-auto(type='text', name='name')
            .form-group
                label(for="email") Email:
                input#email.form-control.w-50.m-auto(type='email', name='email') 
            .form-group
                label(for="phone") Phone:
                input#phone.form-control.w-50.m-auto(type='text', name='phone')
            .form-group
                label(for="password") Password:
                input#password.form-control.w-50.m-auto(type='password', name='password')

            button.btn.btn-primary.m-auto(type='submit') CREATE